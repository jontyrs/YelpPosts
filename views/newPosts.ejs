<%- include('partials/header') -%>

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 col-sm-10 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center display-4">Create Post</h5>
                    <div class="container mt-4">
                        <form action = '/posts' method = 'POST'>
                            <div class="form-group">
                                <label for="imageURL">Enter ImageURL <span style="color: red;">*</span></label>
                                <input type="text" name = 'image' class="form-control" id="imageURL" placeholder="ImageURL">
                            </div>
                            <div class="form-group">
                                <label for="PostTitle">Enter Title <span style="color: red;">*</span></label>
                                <input type="text" name = 'title' class="form-control" id="PostTitle" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label for="PostTitle">Enter Description</label><br>
                                <textarea rows="5" name = 'description' style="width: 100%;"></textarea>
                            </div>
                            <button type="submit" class="btn btn-outline-success">Create Post</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>
